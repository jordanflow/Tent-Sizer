<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cj.patience.tentsizer.PlaceOrder">

    <EditText
        android:id="@+id/client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Buttons"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/client_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Buttons"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="@+id/client_name"
        app:layout_constraintTop_toBottomOf="@+id/client_name" />

    <EditText
        android:id="@+id/client_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Buttons"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/client_name"
        app:layout_constraintTop_toBottomOf="@+id/client_phone" />

    <EditText
        android:id="@+id/client_comments"
        android:layout_width="292dp"
        android:layout_height="183dp"
        style="@style/Buttons"
        android:ems="10"
        android:hint="Special Instructions"
        app:layout_constraintStart_toStartOf="@+id/client_name"
        app:layout_constraintTop_toBottomOf="@+id/client_email" />

    <Button
        android:id="@+id/place_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/client_comments" />

</android.support.constraint.ConstraintLayout>
